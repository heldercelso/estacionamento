            font_size: '12sp'
            size_hint: 1, None
            height: '30sp'

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '12sp'

            Label:
                text: 'Nome'
                font_size: '12sp'
                font_color: (0,0,1,1)
            Label:
                text: 'Documento'
                font_size: '12sp'
                font_color: (0,0,1,1)
            Label:
                text: 'Placa'
                font_size: '12sp'
                font_color: (0,0,1,1)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '30sp'

            TextInput:
                id: user_nome
