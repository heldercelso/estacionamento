<UI>:
    id: est
    orientation: 'vertical'

    buscar_user: buscar_user
    user_results: user_results
    user_results_empty: user_results_empty
    label_nenhum_resultado: label_nenhum_resultado
    nome_doc_placas1: nome_doc_placas1
    nome_doc_placas2: nome_doc_placas2
    nome_doc_placas3: nome_doc_placas3

    buscar_aloc: buscar_aloc
    aloc_results: aloc_results
    aloc_results_empty: aloc_results_empty
    label_nenhum_resultado_aloc: label_nenhum_resultado_aloc
    aloc_label0: aloc_label0
    aloc_label1: aloc_label1
    aloc_label2: aloc_label2
    aloc_label3: aloc_label3

    BoxLayout:
        id: main
        padding: '1sp'
        size_hint: 1, None
        height: '45sp'

        canvas:
            Color:
                rgba: (.44, .73, .83, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        TextInput:
            id: username
            background_color: (0, 0, 0, 1)
            foreground_color: (0, 1, 0, 1)
            size_hint: None, 1
            width: '200sp'
            hint_text: 'Usu√°rio'
            padding: [6,14,6,6]
            text: ''
            on_text: root.login()
            write_tab: False
            multiline: False
            #on_text_validate: root.login_on_enter()
            #focus: True if not username.text else False
        TextInput:
            id: password
            background_color: (0, 0, 0, 1)
            foreground_color: (0, 1, 0, 1)
            size_hint: None, 1
            width: '200sp'
            hint_text: 'Senha (Enter para logar)'
            password: True
            padding: [6,14,6,6]
            text: ''
            on_text: root.login()
            write_tab: False
            multiline: False
            #on_text_validate: root.login_on_enter()
            focus: True
        Label:
            id: mensagem
            size_hint_x: 0.8
        Button:
            id: menu
            text: "Menu"
            size_hint_x: None
            width: '70sp'
            on_release: root.open_menu()

    BoxLayout:
        id: splitter_box

        Splitter:
            id: splitter1
            strip_size: 15
            max_size: root.width-150
            min_size: 150+self.strip_size
            sizable_from: 'right'
            size_hint: 1, 1

            FloatLayout:
                id: entrada_float
                Label:
                    id: entrada_label
                    color: (.44, .73, .83, 1)
                    text: 'CLIENTES'
                    font_size: '20sp'
                    size_hint: None, None
                    size: self.texture_size
                    pos: (entrada_float.width/2-entrada_label.width/2), (entrada_float.height-main.height)
                Button:
                    id: clear_user_text
                    text: "Limpar"
                    font_size: '12sp'
                    height: '40sp'
                    background_color: (.44, .73, .83, 1)
                    background_normal: ''
                    color: (1, 1, 1, 1)
                    pos: (5, entrada_label.pos[1]-self.height-10)
                    size_hint: 0.1, None
                    on_size: self.text = "L" if self.size[0] < 40 else "Limpar"
                    on_release: buscar_user.text = ''; root.load_usertable_results('limpar')
                TextInput:
                    id: buscar_user
                    hint_text: 'Nome, Doc ou Placa'
                    #focus: True if password.text else False
                    font_size: '14sp'
                    background_color: (.9, .9, .9, 1)
                    background_normal: ''
                    background_active: ''
                    foreground_color: (0, 0.6, 0, 1)
                    padding: [6,14,6,6]
                    write_tab: False
                    multiline: False
                    height: '40sp'
                    size_hint: 0.75, None
                    pos: (clear_user_text.pos[0]+clear_user_text.width, entrada_label.pos[1]-self.height-10)
                    on_text_validate: root.load_usertable_results(buscar_user.text)
                Button:
                    id: buscar_button
                    text: "Buscar"
                    font_size: '12sp'
                    height: '40sp'
                    background_color: (.44, .73, .83, 1)
                    background_normal: ''
                    color: (1, 1, 1, 1)
                    pos: (buscar_user.pos[0]+buscar_user.size[0], buscar_user.pos[1])
                    size_hint: 0.1, None
                    on_size: self.text = "B" if self.size[0] < 40 else "Buscar"
                    on_release: root.load_usertable_results(buscar_user.text);
                Label:
                    id: nome_doc_placas1
                    height: '20sp'
                    size_hint: 0.267, None
                    pos: (clear_user_text.pos[0]+2, clear_user_text.pos[1]-self.height-5)
                Label:
                    id: nome_doc_placas2
                    height: '20sp'
                    size_hint: 0.27, None
                    pos: (nome_doc_placas1.pos[0]+self.width, clear_user_text.pos[1]-self.height-5)
                Label:
                    id: nome_doc_placas3
                    height: '20sp'
                    size_hint: 0.29, None
                    pos: (nome_doc_placas2.pos[0]+self.width, clear_user_text.pos[1]-self.height-5)
                ScrollView:
                    id: user_result_scroll
                    scroll_type: ['content', 'bars']
                    bar_width: 15
                    bar_color: 0, 1, 0, .8
                    bar_inactive_color: 0, 1, 0, .2
                    pos: (clear_user_text.pos[0], 60)
                    size_hint: 0.98, None
                    height: splitter_box.height-(splitter_box.height-clear_user_text.pos[1]+85)
                    BoxLayout:
                        id: user_results
                        orientation: 'vertical'
                        size_hint: 0.97, None
                        height: self.minimum_height
                        spacing: 3
                Label:
                    id: label_nenhum_resultado
                    size_hint: 0.5, None
                    pos: (splitter1.width/2-self.width/2, clear_user_text.pos[1]-self.height)
                    height: '20sp'
                BoxLayout:
                    id: user_results_empty
                    orientation: 'vertical'
                    size_hint: 0.2, None
                    pos: (splitter1.width/2-self.width/2, label_nenhum_resultado.pos[1]-self.height)
                    height: '50sp'
                Button:
                    id: novo_user
                    height: '50sp'
                    size_hint: (0.2, None)
                    pos: (splitter1.width/2-self.width/2, 5)
                    on_size: self.text = "NC" if self.size[0] < 70 else "Novo Cliente"
                    on_release: root.adicionar_usuario()

        FloatLayout:
            id: saida_float
            Label:
                id: saida_label
                color: (.44, .73, .83, 1)
                text: 'ALOCAMENTOS'
                font_size: '20sp'
                size_hint: None, None
                size: self.texture_size
                pos: (root.width-saida_float.width/2-self.width/2), (saida_float.height-main.height)
            Button:
                id: clear_aloc_text
                text: "Limpar"
                font_size: '12sp'
                height: '40sp'
                background_color: (.44, .73, .83, 1)
                background_normal: ''
                color: (1, 1, 1, 1)
                pos: (root.width-saida_float.width+5, saida_label.pos[1]-self.height-10)
                size_hint: 0.1, None
                on_size: self.text = "L" if self.size[0] < 35 else "Limpar"
                on_release: buscar_aloc.text = ''; root.load_aloctable_results('limpar')
            TextInput:
                id: buscar_aloc
                hint_text: 'Nome, Doc ou Placa'
                font_size: '14sp'
                background_color: (.9, .9, .9, 1)
                background_normal: ''
                background_active: ''
                foreground_color: (0, 0.6, 0, 1)
                padding: [6,14,6,6]
                write_tab: False
                multiline: False
                height: '40sp'
                size_hint: 0.75, None
                #focus: True if password.text else False
                pos: (clear_aloc_text.pos[0]+clear_aloc_text.width, saida_label.pos[1]-self.height-10)
                on_text_validate: root.load_aloctable_results(buscar_aloc.text)
            Button:
                id: buscar_aloc_button
                text: "Buscar"
                font_size: '12sp'
                height: '40sp'
                background_color: (.44, .73, .83, 1)
                background_normal: ''
                color: (1, 1, 1, 1)
                pos: (buscar_aloc.pos[0]+buscar_aloc.size[0], buscar_aloc.pos[1])
                size_hint: 0.1, None
                on_size: self.text = "B" if self.size[0] < 43 else "Buscar"
                on_release: root.load_aloctable_results(buscar_aloc.text);
            Label:
                id: aloc_label0
                #text: 'teste'
                height: '20sp'
                size_hint: 0.08, None
                pos: (clear_aloc_text.pos[0]+2, clear_aloc_text.pos[1]-self.height-5)
            Label:
                id: aloc_label1
                #text: 'teste'
                height: '20sp'
                size_hint: 0.14, None
                pos: (aloc_label0.pos[0]+self.width, clear_aloc_text.pos[1]-self.height-5)
            Label:
                id: aloc_label2
                #text: 'teste'
                height: '20sp'
                size_hint: 0.22, None
                pos: (aloc_label1.pos[0]+self.width, clear_aloc_text.pos[1]-self.height-5)
            Label:
                id: aloc_label3
                #text: 'teste'
                height: '20sp'
                size_hint: 0.25, None
                pos: (aloc_label2.pos[0]+self.width, clear_aloc_text.pos[1]-self.height-5)
            ScrollView:
                id: aloc_result_scroll
                scroll_type: ['content', 'bars']
                bar_width: 15
                bar_color: 0, 1, 0, .8
                bar_inactive_color: 0, 1, 0, .2
                pos: (clear_aloc_text.pos[0]+1, 60)
                size_hint: 0.98, None
                height: splitter_box.height-(splitter_box.height-clear_aloc_text.pos[1]+85)
                BoxLayout:
                    id: aloc_results
                    orientation: 'vertical'
                    size_hint: 0.97, None
                    height: self.minimum_height
                    spacing: 3
            Label:
                id: label_nenhum_resultado_aloc
                size_hint: 0.5, None
                pos: (root.width-saida_float.width/2-self.width/2, clear_aloc_text.pos[1]-self.height)
                height: '20sp'
            BoxLayout:
                id: aloc_results_empty
                orientation: 'vertical'
                size_hint: 0.2, None
                pos: (aloc_label2.pos[0]+self.width, clear_aloc_text.pos[1]-self.height)
                #pos: (splitter1.width/2-self.width/2, label_nenhum_resultado_aloc.pos[1]-self.height)
                height: '50sp'
            Button:
                id: novo_aloc
                height: '50sp'
                size_hint: (0.2, None)
                pos: (root.width-saida_float.width/2-self.width/2, 5)
                on_size: self.text = "NA" if self.size[0] < 70 else "Alocar Vaga"
                on_release: root.criar_aloc_sem_cadastro()

<Menu>:
    orientation: 'vertical'
    exit: exit

    BoxLayout
        orientation: 'vertical'
        size_hint: 0.5, 1
        pos_hint: {'x':0.25, 'y': 1}
        spacing: 3
        canvas:
            Color:
                rgba: 1,0,1, 0
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            id: tabela_preco
            text: "Tabela de Pre√ßo"
            size_hint_x: 1
            on_release: root.tabela_preco()
        Button:
            id: backup
            text: "Backup"
            size_hint_x: 1
            on_release: root.backup()
        Button:
            id: sobre
            text: "Sobre"
            size_hint_x: 1
            on_release: root.sobre()
        Button:
            id: exit
            text: "Voltar"
            size_hint_x: 1

<UserDialog>:
    id: user_box
    user_nome: user_nome
    user_doc: user_doc
    user_placas: user_placas
    data_cadastro: data_cadastro
    label_ver_dados: label_ver_dados
    #size_hint: None, None
    #size: 500, 300

    BoxLayout:
        orientation: 'vertical'
        spacing: 5
        canvas:
            Color:
                rgba: (.44, .73, .83, 0)
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            id: label_ver_dados
            size_hint: 1, None
            height: '30sp'
            font_size: '12sp'
        Label:
            id: data_cadastro
            size_hint: 1, None
            text: root.data_cadastro
            height: '15sp'
            font_size: '15sp'
        TextInput:
            id: user_nome
            text: root.user_nome
            size_hint: 1, None
            height: '30sp'
            on_text: root.check_valores(self.text, user_doc.text, user_placas.text)
        TextInput:
            id: user_doc
            text: root.user_doc
            size_hint: 1, None
            height: '30sp'
            on_text: root.check_valores(user_nome.text, self.text, user_placas.text)
        TextInput:
            id: user_placas
            text: root.user_placas
            size_hint: 1, None
            height: '30sp'
            on_text: root.check_valores(user_nome.text, user_doc.text, self.text)
        Label:
            id: linha_planilha
            text: root.linha_planilha
            font_size: '12sp'
            size_hint: 1, None
            height: '20sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '50sp'
            spacing: 5

            Button:
                id: alocar
                text: 'Alocar'
                size_hint: 0.3, 1
                on_release: root.alocar()
            Button:
                id: salvar_user
                text: 'Salvar'
                size_hint: 0.3, 1
                on_release: root.salvar_user()
            Button:
                id: cancel
                text: 'Cancelar'
                size_hint: 0.3, 1
                on_release: root.cancel()
<NovoUser>:
    id: novo_user
    add_user: add_user
    cancel: cancel
    user_nome: user_nome
    user_doc: user_doc
    user_placas: user_placas
    label_ver_dados: label_ver_dados
    data_cadastro: data_cadastro

    BoxLayout:
        orientation: 'vertical'
        spacing: 5

        Label:
            id: label_ver_dados
            size_hint: 1, None
            height: '30sp'
            font_size: '12sp'
        TextInput:
            id: user_nome
            text: '123'
            size_hint: 1, None
            hint_text: 'Nome'
            height: '30sp'
            multiline: False
            write_tab: False
            #cursor_color: (0,0,0,1)
            on_text: root.check_valores(self.text, user_doc.text, user_placas.text)
            border: (2,2,2,2)
        TextInput:
            id: user_doc
            size_hint: 1, None
            text: '123'
            hint_text: 'Doc (apenas n√∫meros)'
            height: '30sp'
            multiline: False
            write_tab: False
            #cursor_color: (0,0,0,1)
            on_text: root.check_valores(user_nome.text, self.text, user_placas.text)
            input_filter: 'int'
            border: (2,2,2,2)
        TextInput:
            id: user_placas
            text: '123'
            size_hint: 1, None
            hint_text: 'Formato: AAA-1234. Se houver mais de uma separe-as por ; (ex: AAA-1234;BBB-5678)'
            height: '30sp'
            multiline: False
            write_tab: False
            #cursor_color: (0,0,0,1)
            on_text: root.check_valores(user_nome.text, user_doc.text, self.text)
            border: (2,2,2,2)
        Label:
            id: data_cadastro
            size_hint: 1, None
            text: root.data_cadastro
            height: '15sp'
            font_size: '15sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '50sp'
            spacing: 5

            Button:
                id: add_user
                text: 'Adicionar'
                size_hint: 0.3, 1
            Button:
                id: cancel
                text: 'Cancelar'
                size_hint: 0.3, 1

<AlocDialog>:
    id: aloc_dialog
    salvar_aloc: salvar_aloc
    cancel: cancel
    user_nome: user_nome
    user_doc: user_doc
    user_placas: user_placas
    data_entrada: data_entrada
    data_saida: data_saida
    total_horas: total_horas
