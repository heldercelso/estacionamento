                size_hint: 1, None
                height: '30sp'
                multiline: False
                write_tab: False
                cursor_blink: False
                cursor_color: (1,1,1,1)
                background_color: (0.4, 0.4, 0.4, 1)
                foreground_color: (1,1,1,1)
                border: (2,2,2,2)
            TextInput:
                id: user_doc
                readonly: True
                size_hint: 1, None
                text: root.user_doc
                height: '30sp'
                multiline: False
                write_tab: False
                cursor_blink: False
                cursor_color: (1,1,1,1)
                background_color: (0.4, 0.4, 0.4, 1)
                foreground_color: (1,1,1,1)
                border: (2,2,2,2)
            TextInput:
                id: user_placas
                readonly: True
                text: root.user_placas
                size_hint: 1, None
                height: '30sp'
                multiline: False
                write_tab: False
                cursor_blink: False
                cursor_color: (1,1,1,1)
                background_color: (0.4, 0.4, 0.4, 1)
                foreground_color: (1,1,1,1)
                border: (2,2,2,2)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '30sp'

            Label:
                id: data_entrada
                size_hint: 1, None
                text: root.data_entrada
                height: '15sp'
                font_size: '15sp'
            Label:
                id: data_saida
                size_hint: 1, None
                text: root.data_saida
                height: '15sp'
                font_size: '15sp'
                color: (1,0,0,1)
            Label:
                id: total_horas
                size_hint: 1, None
                text: root.total_horas
                height: '15sp'
                font_size: '15sp'
                color: (0,1,0,1)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '50sp'
            spacing: 2

            Label:
                id: total_horas
                text: 'Pre√ßo:'
                size_hint: 0.4, None
                height: '30sp'
                font_size: '12sp'
            TextInput:
                id: preco
                text: '123'
                #disabled: True
                readonly: True
                multiline: False
                #input_filter: 'float'
                hint_text: 'Valor'
                size_hint: 1, None
                height: '30sp'
                font_size: '15sp'
                #on_text: Clock.schedule_once(partial(root.moeda_format), 0.1)
            Label:
                text: 'Liberado:'
                size_hint: 0.5, None
                height: '30sp'
                font_size: '12sp'
            Spinner:
                id: liberado
                text: root.liberado
                values: ('N√ÉO', 'SIM')
                size_hint: 1, None
                height: '30sp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '50sp'
            spacing: 5

            Button:
                id: salvar_aloc
                disabled: True if not preco.text else False
                text: 'Salvar'
                size_hint: 0.3, 1
                #on_release: root.liberar_aloc(linha_planilha.text, liberado.text)
            Button:
                id: cancel
                text: 'Cancelar'
                size_hint: 0.3, 1
