    user_doc: user_doc
    user_placas: user_placas
    data_entrada: data_entrada
    label_ver_dados: label_ver_dados
    linha_planilha: linha_planilha
    nao_cadastrado: nao_cadastrado

    BoxLayout:
        orientation: 'vertical'
        spacing: 10

        Label:
            id: label_ver_dados
            size_hint: 1, None
            height: '30sp'
            font_size: '12sp'
        BoxLayout:
            orientation: 'horizontal'
            spacing: 5
            size_hint: 0.5, None
            pos_hint: {'x':0.25, 'y': 1}
            height: '30sp'

            Label:
                text: 'Placa:'
                size_hint: 0.2, None
                height: '30sp'
            TextInput:
                id: user_placas
                text: '---'
                hint_hint: 'Digite aqui'
                size_hint: 0.8, None
                height: '30sp'
                on_text: root.check_valores(self.text)
        Label:
            id: linha_planilha
            text: root.linha_planilha
            font_size: '12sp'
            size_hint: 1, None
            height: '20sp'
        Label:
            id: data_entrada
            size_hint: 1, None
            text: root.data_entrada
            color: (0, 0.5, 0, 1)
            height: '30sp'
            font_size: '15sp'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: '50sp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.5, 1
                pos_hint: {'x':0.2, 'y': 1}
                Label:
                    id: lnome
                Label:
                    id: user_nome
                    text: root.user_nome
            Label:
                id: nao_cadastrado
                size_hint: 1, None
                height: '10sp'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 0.5, 1
                pos_hint: {'x':0.2, 'y': 1}
                Label:
                    id: ldoc
                Label:
                    id: user_doc
                    text: root.user_doc
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: '50sp'
            spacing: 5

            Button:
                id: criar_aloc
                text: 'Alocar'
                size_hint: 0.3, 1
            Button:
                id: cadastrar
                text: 'Cadastrar'
                size_hint: 0.3, 1
                #on_release: root.cadastrar_usuario
            Button:
                id: cancel
                text: 'Cancelar'
                size_hint: 0.3, 1
